# Development Dockerfile with hot reload
FROM node:20-alpine

RUN corepack enable && corepack prepare pnpm@latest --activate
WORKDIR /app

# Install dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start dev server
CMD ["pnpm", "dev"]
